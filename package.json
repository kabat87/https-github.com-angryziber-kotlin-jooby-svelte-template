{
  "name": "app-ui",
  "version": "0.0.1",
  "scripts": {
    "build": "snowpack build && npm run build-autoprefixer && cp -ru public build && npm run build-modify-index",
    "build-autoprefixer": "postcss -u autoprefixer --no-map --replace public/css/*.css",
    "build-modify-index": "sed -i 's@</head>@  <link rel=\"stylesheet\" href=\"/css/_dist_/ui/main.css?{{assetsTime}}\"></head>@' build/public/index.html",
    "watch": "snowpack dev",
    "gen-icon-sprite": "npx svgo --config ui/assets/icons-svgo.json -f ui/assets/icons && npx svg-sprite --config ui/assets/icons-svg-sprite.json ui/assets/icons/*.svg",
    "test": "web-test-runner {i18n,ui}/**/*.test.ts"
  },
  "devDependencies": {
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/plugin-svelte": "^3.6.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/svelte": "^3.0.3",
    "@types/chai": "^4.2.17",
    "@types/jest": "^26.0.23",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.5",
    "@web/test-runner": "^0.13.2",
    "autoprefixer": "^10.2.5",
    "bootstrap-scss": "^4.6.0",
    "chai": "^4.3.4",
    "http-proxy": "^1.18.1",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.11",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.6.0",
    "snowpack": "^3.3.5",
    "snowpack-plugin-rollup-bundle": "^0.4.4",
    "svelte": "^3.37.0",
    "svelte-check": "^1.5.2",
    "svelte-preprocess": "^4.7.2",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
